/**
 * @fileOverview Firestore Security Rules for the BrandBloom application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles
 * and allows public read access to events, contact messages, and announcements.
 * Write access to public collections is restricted.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles.
 * - /testimonials/{testimonialId}: Stores customer testimonials, each linked to a user profile.
 * - /events/{eventId}: Stores public event information.
 * - /contactMessages/{contactMessageId}: Stores contact messages submitted through the contact form.
 * - /announcements/{announcementId}: Stores temporary announcements.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data (ownership model).
 * - Events, contact messages, and announcements are publicly readable.
 * - No user listing is allowed for security.
 *
 * Denormalization for Authorization:
 * - The testimonials collection requires `userProfileId` so that it can be linked to the respective user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requested user ID matches the authenticated user's ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /****************** Users Collection Rules ******************/

    /**
     * @description Manages user profile data.
     * @path /users/{userId}
     * @allow (get, create, update) User can manage their own profile.
     * @deny (list, delete) Listing or deleting users is not permitted.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get, create, update: if isOwner(userId);
      allow list, delete: if false; 
    }

    /****************** Testimonials Collection Rules ******************/

    /**
     * @description Manages customer testimonials.
     * @path /testimonials/{testimonialId}
     * @allow (create) Authenticated user can create a testimonial with correct userProfileId.
     * @allow (get, list) Any user can read the testimonials.
     * @allow (update, delete) No write access for non-admin users.
     * @deny (create) User cannot create a testimonial for another user by spoofing userProfileId.
     * @principle Public read, restricted write access based on authorization.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false; // TODO: Add admin role check if needed.
    }

    /****************** Events Collection Rules ******************/

    /**
     * @description Manages events in the events gallery.
     * @path /events/{eventId}
     * @allow (get, list) Any user can read the events.
     * @allow (create, update, delete) No write access for non-admin users.
     * @deny (create) Non-admin users cannot create an event.
     * @principle Public read, restricted write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check if needed.
    }

    /****************** ContactMessages Collection Rules ******************/

    /**
     * @description Manages contact messages submitted through the contact form.
     * @path /contactMessages/{contactMessageId}
     * @allow (get, list) Any user can read the contact messages.
     * @allow (create) Any user can submit a contact message (even unauthenticated).
     * @allow (update, delete) No write access for non-admin users.
     * @principle Public read and create, restricted update/delete access.
     */
    match /contactMessages/{contactMessageId} {
      allow get, list: if true;
      allow create: if true; // Allow anyone to submit contact form messages
      allow update, delete: if false; // TODO: Add admin role check if needed.
    }

    /****************** Announcements Collection Rules ******************/

    /**
     * @description Manages temporary announcements.
     * @path /announcements/{announcementId}
     * @allow (get, list) Any user can read the announcements.
     * @allow (create, update, delete) No write access for non-admin users.
     * @deny (create) Non-admin users cannot create an announcement.
     * @principle Public read, restricted write access.
     */
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check if needed.
    }
  }
}
